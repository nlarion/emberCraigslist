{{#if addNewList}}
  <h1>New Listing</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="userName">Owner</label>
          {{input value=userName id="userName"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          {{input type="number" value=price id="price"}}
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          {{input value=location id="location"}}
        </div>

        <button class="btn btn-success" {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-info" {{action 'listFormShow'}}>List a new item</button>
{{/if}}
